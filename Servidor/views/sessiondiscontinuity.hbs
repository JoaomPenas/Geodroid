<body>
    <div class="container-fluid">
      <div class="row">

  <!--  -->
        <main class="col-sm-9 offset-sm-4 col-md-10 offset-md-1 pt-3">
          <h4 class="float-right">
            <a> | </a><a href="\logout">Logout</a>
          </h4>
          {{#if userIsAdmin}}
              <h4 class="float-right"><a href="\admin">Admin area </a></h4>
          {{/if}}
          <h1>Session</h1>
          

          <h2 align="center">{{discontinuities.[0].idSession}}</h2> <!-- because the session is allways the same...-->
          <div class="table-responsive">
            <table class="table table-striped">
              <thead>
                <tr>
                  <th>User</th>
                  <th>Id</th>
                  <th>Dir.</th>
                  <th>Dip</th>
                  <th>Lat.</th>
                  <th>Long.</th>
                  <th>Persist.</th>
                  <th>Apert.</th>
                  <th>Rough.</th>
                  <th>Infill.</th>
                  <th>Weather.</th>
                </tr>
              </thead>

              <tbody>
                {{#each discontinuities}}
                <tr>
                  <td><a href="/users/{{idUser}}">{{idUser}}</a></td>
                  <td>{{id}}</td>
                  <td>{{direction}}</td>
                  <td>{{dip}}</td>
                  <td>{{latitude}}</td>
                  <td>{{longitude}}</td>
                  <td>{{persistence}}</td>
                  <td>{{aperture}}</td>
                  <td>{{roughness}}</td>
                  <td>{{infilling}}</td>
                  <td>{{weathering}}</td>
                </tr>
                {{/each}}

              </tbody>
            </table>
          </div>
        </main>
      </div>
    </div>

</body>