<body>
    <div class="container-fluid">
      <div class="row">


        <main class="col-sm-9 offset-sm-4 col-md-10 offset-md-1 pt-3">
          <h4 class="float-right">
            <a> | </a><a href="\logout">Logout</a>
          </h4>
          {{#if userIsAdmin}}
              <h4 class="float-right"><a href="\admin">Admin area </a></h4>
          {{/if}}
          <h1>Users</h1>
           
          
          <h2 >Available users</h2>
          <div class="table-responsive">
            <table class="table table-striped">
              
              <thead>
                <tr>
                  <th>User</th>
                  <th>Num. of Sessions</th>
                  <th>Num. of Discontinuities</th>
                </tr>
              </thead>

              <tbody>
                {{#each users}}
                <tr>
                  <td>{{#if sessoes}}<a href="/users/{{user}}">{{/if}}{{user}}</a></td>
                  <td>{{sessoes}}</td>
                  <td>{{discont}}</td>
                </tr>
                <tr>
                  {{/each}}
              </tbody>
            </table>
          </div>
        </main>
      </div>
    </div>

</body>