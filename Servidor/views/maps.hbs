        // critÃ©rio para centrar: o primeiro que encontrar, se nao houver nenhum ponto, um ponto predefinido
        var centerLat=0;
        var centerLong=0;
        if (locations.length >0){ 
            centerLat=locations[0].latitude;
            centerLong=locations[0].longitude;
        } else {
            var centerLat=38.7;
            var centerLong=-8.5;
        }
        
        var myCenterLatLng = {lat: centerLat, lng: centerLong};
        //var myLatLng = {lat: 38.7, lng: -8.5};

        var map = new google.maps.Map(document.getElementById("map"), {
          zoom: 10,
          mapTypeId: google.maps.MapTypeId.TERRAIN,
          center: myCenterLatLng
        });

        var infowindow = new google.maps.InfoWindow();

    var marker, i;

    for (i = 0; i < locations.length; i++) {  
      marker = new google.maps.Marker({position: new google.maps.LatLng(locations[i].latitude, locations[i].longitude),map: map});

      google.maps.event.addListener(marker, 'click', (function(marker, i) {
        return function() {
          infowindow.setContent(locations[i].id);
          infowindow.open(map, marker);
        }
      })(marker, i));

        /*
