<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ps.geodroidapp.com.example.humbertosilva.geodroidapp.Activities.Intro">


    <Button
        android:id="@+id/intro_button_enter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="148dp"
        android:layout_marginTop="296dp" />

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="225dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="25dp">

        <LinearLayout
            android:layout_width="366dp"
            android:layout_height="90dp"
            android:orientation="horizontal"
            tools:layout_editor_absoluteY="16dp"
            tools:layout_editor_absoluteX="9dp"
            android:weightSum="1"
            android:baselineAligned="false">

            <TextView
                android:id="@+id/intro_tv_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:layout_weight="0.53" />

            <EditText
                android:id="@+id/intro_et_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:text="w@mail.com" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="366dp"
            android:layout_height="90dp"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:weightSum="1"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="131dp">

            <TextView
                android:id="@+id/intro_tv_pass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.53"
                android:text="Pass" />

            <EditText
                android:id="@+id/intro_et_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPassword" />

        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
